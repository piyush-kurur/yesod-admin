table.admin
   border-collapse: collapse
   border: #{borderWidth} solid #{borderColour}
   color: #{penColour}
   width: 100%

table.admin td
   text-align: left
   border-collapse: collapse
   border: #{borderWidth} solid #{borderColour}
   padding-top: #{vspace}
   padding-bottom: #{vspace}
   padding-left:  #{hspace}
   padding-right: #{hspace}

table.admin th
   text-align: left
   border-collapse: collapse
   border: #{borderWidth} solid #{borderColour}
   padding-top:    #{vspace}
   padding-bottom: #{vspace}
   padding-left:  #{hspace}
   padding-right: #{hspace}

table.admin tr.header
   background: #{panelBackground}
   color     : #{panelTextColour}
            
table.admin tr.odd
    background: #{zebraOddColour}
table.admin tr.even
    background: #{zebraEvenColour}
            
